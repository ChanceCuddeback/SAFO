
/ {
    leds {
        compatible = "gpio-leds";
        led0: led_0 {
            gpios = <&gpio0 24 0>;
            label = "Red LED";
        };
        led1: led_1 {
            gpios = <&gpio0 16 0>;
            label = "Green LED";
        };
        led2: led_2 {
            gpios = <&gpio0 06 0>;
            label = "Blue LED";
        };
        
    };
    

    aliases {
        ledr = &led0;
        ledg = &led1;
        ledb = &led2;
    };
};
